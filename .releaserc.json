{
  "plugins": [
    [
      "semantic-release-gitmoji",
      {
        "releaseRules": {
          "major": [
            ":boom:"
          ],
          "minor": [
            ":sparkles:",
            ":zap:"
          ],
          "patch": [
            ":bug:",
            ":ambulance:",
            ":lock:"
          ]
        },
        "releaseNotes": {
          "template": "/default-template.hbs",
          "partials": {
            "commitTemplate": "/commit-template.hbs"
          },
          "helpers": {
            "datetime": "function (format = 'UTC:yyyy-mm-dd') {\n  return dateFormat(new Date(), format);\n}"
          },
          "issueResolution": {
            "template": "{baseUrl}/{owner}/{repo}/issues/{ref}",
            "baseUrl": "https://github.com",
            "source": "github.com",
            "removeFromCommit": false,
            "regex": "/#\\d+/g"
          }
        }
      }
    ],
    "@semantic-release/github"
  ],
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ]
}
